# Use the official npm registry
registry=https://registry.npmjs.org/

# Donâ€™t fail on peer dependency issues (common with React, Tailwind, Radix, etc.)
strict-peer-dependencies=false

# Ensure pnpm hoists dependencies correctly (fixes Radix + Tailwind issues)
shamefully-hoist=true

# Disable frozen lockfile to avoid version mismatch between local & Vercel
prefer-frozen-lockfile=false

# Always retry network fetches (helps when Vercel registry is flaky)
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000

# Improve cross-platform compatibility
resolution-mode=highest
